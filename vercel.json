{
    "version": 2,
    "installCommand": "rm -rf node_modules && npm install --legacy-peer-deps",
    "buildCommand": "npm run build",
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist/client"
            }
        },
        {
            "src": "api/index.ts",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}